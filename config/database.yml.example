default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root
  password:
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: blog_advanced_development

test:
  <<: *default
  database: blog_advanced_test

production:
  <<: *default
  database: blog_advanced_production
  username: blog_advanced
  password: <%= ENV['BLOG_ADVANCED_DATABASE_PASSWORD'] %>
